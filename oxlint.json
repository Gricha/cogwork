{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "perf": "error"
  },
  "rules": {
    "no-unused-vars": "error",
    "no-console": "off",
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "error",
    "no-new": "off",
    "jest/no-conditional-expect": "off"
  },
  "plugins": ["vitest"],
  "ignorePatterns": [
    "node_modules",
    "dist",
    "*.d.ts"
  ]
}
