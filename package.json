{
  "name": "cogwork-monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "oxlint -c oxlint.json packages",
    "lint:fix": "oxlint -c oxlint.json --fix packages",
    "format": "oxfmt --write packages",
    "format:check": "oxfmt packages",
    "dev": "pnpm -r --parallel dev",
    "validate": "pnpm lint && pnpm format:check && pnpm build"
  },
  "devDependencies": {
    "oxfmt": "^0.20.0",
    "oxlint": "^1.0.0",
    "typescript": "^5.7.0"
  }
}
