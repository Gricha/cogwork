{
  "name": "@cogwork/snow-day",
  "version": "1.0.0",
  "description": "Snow Day - A puzzle adventure game built with cogwork",
  "keywords": [
    "cogwork",
    "game",
    "snow-day",
    "text-adventure"
  ],
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./game": {
      "types": "./dist/game-definition.d.ts",
      "import": "./dist/game-definition.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "cogwork": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0",
    "zod": "^4.2.1"
  }
}
